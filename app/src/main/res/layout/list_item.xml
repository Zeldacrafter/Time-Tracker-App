<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="20dp">

    <View
        android:id="@+id/list_item_color"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@color/grey"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="7dp"/>

    <TextView
        android:id="@+id/list_item_name_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/placeholder"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_toEndOf="@id/list_item_color"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/list_item_name_text"
        android:layout_toStartOf="@+id/list_item_active_text"/>

    <TextView
        android:id="@+id/list_item_active_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/placeholder"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_toStartOf="@id/list_item_more_icon"/>

    <ImageView
        android:id="@+id/list_item_more_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_more_vert_24px"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="4dp" />
</RelativeLayout>
